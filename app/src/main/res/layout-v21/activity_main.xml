<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2CC">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDA684"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarTop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_undo_26" />


           <TextView
               android:id="@+id/textViewcatalogscolar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/textViewcatalogscolar"
               android:textColor="#000000"
               android:textSize="25sp"
               android:textStyle="bold"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toRightOf="@id/backButton"
               app:layout_constraintBottom_toBottomOf="@+id/toolbarTop"
               />

            <Spinner
                android:id="@+id/spinnerLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/imageWiewLanguage"
                android:layout_marginTop="25dp"
                />

            <ImageView
                android:id="@+id/imageWiewLanguage"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                app:srcCompat="@drawable/icons8_language_50"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                />
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CDA684"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                />

    <ImageView
        android:id="@+id/imageViewHelpButton"
        android:layout_width="60dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/icons8_info_64"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="7dp" />

    <ImageView
        android:id="@+id/imageViewStud"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toBottomOf="@id/toolbarBottom"
        app:layout_constraintTop_toTopOf="@id/toolbarTop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/student" />

    <ImageView
        android:id="@+id/imageViewTeacher"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarTop"
        app:layout_constraintBottom_toTopOf="@id/imageViewStud"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/teacher__1_" />

    <ImageView
        android:id="@+id/imageViewParent"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toTopOf="@id/toolbarBottom"
        app:layout_constraintTop_toBottomOf="@id/imageViewStud"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/teacher__2_" />

    <TextView
        android:id="@+id/textViewTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewTeacher"
        app:layout_constraintTop_toBottomOf="@id/imageViewTeacher"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#737373"
        android:textStyle="bold"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/textViewStud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewStudent"
        app:layout_constraintTop_toBottomOf="@id/imageViewStud"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#737373"
        android:textStyle="bold"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/textViewParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewParent"
        app:layout_constraintTop_toBottomOf="@id/imageViewParent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#737373"
        android:textStyle="bold"
        android:textSize="19dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>


